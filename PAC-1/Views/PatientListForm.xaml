<UserControl x:Class="PAC_1.Views.PatientListForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PAC_1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Foreground="#FFFFF5F5">
    <Grid Background="#FFF5F3F6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.15*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.17*"/>
            <RowDefinition Height="0.95*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF973D64" Offset="0.184"/>
                    <GradientStop Color="#FF420C23" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <Label Content="Dane pacjenta" VerticalAlignment="Top" FontSize="24" FontWeight="Black" FontFamily="Georgia" Margin="15" Foreground="#FFEEEAEA"/>
        </StackPanel>
        <StackPanel  HorizontalAlignment="Left" Margin="30,30,0,30" Grid.Row="1">

            <Label Content="Imię:" Margin="30,0,0,0" FontFamily="Georgia" FontSize="18" HorizontalAlignment="Right"/>
            <Label Content="Nazwisko:" Margin="10,10,0,0" FontFamily="Georgia" FontSize="18" HorizontalAlignment="Right"/>
            <Label Content="Wiek:" Margin="10,10,0,0" FontFamily="Georgia" FontSize="18" HorizontalAlignment="Right" />
            <Label Content="Miejsce urodzenia:" Margin="10,10,0,0" FontFamily="Georgia" FontSize="18" HorizontalAlignment="Right"/>
            <Label Content="IQ:" Margin="10,10,0,0" FontFamily="Georgia" FontSize="18" HorizontalAlignment="Right"/>
            <Label Content="Skala:" Margin="10,10,0,0" FontFamily="Georgia" FontSize="18" HorizontalAlignment="Right"/>
            <Label Content="Środowisko:" Margin="10,10,0,0" FontFamily="Georgia" FontSize="18" HorizontalAlignment="Right"/>
            <Label Content="Inne:" Margin="10,10,0,0" FontFamily="Georgia" FontSize="18" HorizontalAlignment="Right"/>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,0,30" Width="460" Grid.Row="1">
            <TextBox Width="250" Height="25" Margin="10,30" HorizontalAlignment="Left" BorderThickness="2.5" BorderBrush="Gray"/>
            <TextBox Width="250" Height="25" Margin="10,-10,0,0" HorizontalAlignment="Left" BorderThickness="2.5" BorderBrush="Gray"/>
            <ComboBox Width="250" Height="25" Margin="10,10,0,0" HorizontalAlignment="Left" BorderThickness="2.5" BorderBrush="Gray"/>
            <TextBox Width="250" Height="25" Margin="10,15,0,0" HorizontalAlignment="Left" BorderThickness="2.5" BorderBrush="Gray"/>
            <ComboBox Width="250" Height="25" Margin="10,20" HorizontalAlignment="Left" BorderThickness="2.5" BorderBrush="Gray"/>
            <TextBox Width="250" Height="25" Margin="10,-5" HorizontalAlignment="Left" BorderThickness="2.5" BorderBrush="Gray"/>
            <TextBox Width="250" Height="25" Margin="10,20" HorizontalAlignment="Left" BorderThickness="2.5" BorderBrush="Gray"/>
            <TextBox Width="250" Height="25" Margin="10,-5" HorizontalAlignment="Left" BorderThickness="2.5" BorderBrush="Gray" />
        </StackPanel>
        <Button Grid.Column="2" Width="80" Height="30" HorizontalAlignment="Left" Content=">>" FontSize="18" FontFamily="Georgia" VerticalAlignment="Bottom" Margin="0,30" Grid.Row="1" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF973D64" Offset="0.184"/>
                    <GradientStop Color="#FF420C23" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</UserControl>
