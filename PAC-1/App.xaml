<Application x:Class="PAC_1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PAC_1"
             xmlns:views="clr-namespace:PAC_1.Views"
             xmlns:viewmodels="clr-namespace:PAC_1.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:AddEditPatientFormVM}">
            <views:AddEditPatientForm/>
        </DataTemplate>
        <DataTemplate DataType ="{x:Type viewmodels:GroupFormVM}">
            <views:GroupForm/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:IndividualFormVM}">
            <views:IndividualForm/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:PatientListFormVM}">
            <views:PatientListForm/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SchoolFormVM}">
            <views:SchoolForm/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:WelcomeFormVM}">
            <views:WelcomeForm/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ChoosePatientsFormVM}">
            <views:ChoosePatientsForm/>
        </DataTemplate>
    </Application.Resources>
</Application>
